/* pages/inMeetting/assignPicture/assignPicture.wxss */
@import '../../../style/weui.wxss';
page,
.page,
.page__bd{
  height: 100%;
}
.title{
  height: 14vh
}
.images{
  height: 54vh;
  background: #f5f5f5;
}
.images image{
  width: 100%;
  height: 530rpx;
}
.portrait{
  position: absolute;
  top: 50rpx;
  left: 70rpx;
  display: flex;
}
.portrait image{
  height: 80rpx;
  width: 80rpx;
}
.name{
  display: flex;
  align-items: center;
  padding:  0 0 0 30rpx;
}
.zone{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 40rpx 40rpx 0 40rpx;
  height: 20vh;
  align-items: flex-start;
}
.like{
  width: 60%;
  overflow: hidden;
  height: 60rpx;
}
.like image:first-child{
  height: 40rpx;
  width: 40rpx;
}

.discuss{
  display: flex;
  align-items: center;
  margin: 4rpx 0 0 0;
}
.discuss image{
  height: 50rpx;
  width: 50rpx;
}
.dynamic_btn{
  position: relative;
  bottom: 40rpx;
  right: 0rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.dynamic_input{
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  height:70rpx
}

.operation{
  margin: 0 40rpx 0 40rpx;
  /* display: flex;
