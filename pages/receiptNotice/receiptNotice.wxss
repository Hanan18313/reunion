@import '../../style/weui.wxss';
page,
.page,
.page__bd{
    height: 100%;
}
.msg-list {
}

.msg-item {
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  position: relative;
  left:0;
  top:0;
  overflow: hidden;
}

.msg {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left:0;
  top:0;
  z-index: 100;
  background-color: #FFF;
}

.header-img {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 10%;
}

.msg-title {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  font-size: 32rpx;
  color: #1c2438
}
.msg-content{
  font-size: 80%;
  color: rgb(127, 127, 127);
  position: absolute;
  left: 160rpx;
  bottom: 80rpx;
}
.msg-time {
  position: absolute;
  left: 100rpx;
  bottom: 10rpx;
  font-size: 70%;
  color: rgb(211, 6, 6);
}
.tags{
  position: absolute;
  left: 470rpx;
  bottom: 80rpx;
  font-size: 70%;
  color: rgba(6, 243, 6, 0.966);
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left:0;
  top:0;
  z-index: 0;
}

.menu-delete {
  position: absolute;
  width: 150rpx;
  height: 148rpx;
  top:4rpx;
  right: 0;
  background-color: rgb(255, 58, 50);
  color:#FFF;
  text-align: center;
  line-height:150rpx;
}

.menu-mark {
  position: absolute;
  width: 200rpx;
  height: 148rpx;
  top:1rpx;
  right: 150rpx;
  background-color: rgb(200, 199, 205);
  color:#FFF;
  text-align: center;
  line-height:150rpx;
}