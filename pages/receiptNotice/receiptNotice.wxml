<!--pages/newsAdd/newsAdd.wxml-->
<view class='page'>
  <view class='page__bd'>
    <view class="{{isIphoneX ?'fix-iphonex-navbar-ipx':'fix-iphonex-navbar'}}"></view>
    <view>
      <i-tabs current="{{ current }}" bindchange="handleChange">
          <i-tab key="0" title="待处理"></i-tab>
          <i-tab key="1" title="已处理"></i-tab>
      </i-tabs>
    </view>
    <view>
      <scroll-view scroll-y='true' style='height:88vh' scroll-top='{{scrollTop}}' bindscrolltoupper="upper">
        <view>
          <i-load-more tip="加载中..." loading="{{ loading }}" wx:if="{{loading}}"/>
          <i-load-more tip="已全部加载" wx:if="{{loading_done}}" loading="{{false}}" />
        </view>
        <view>
          <view class="weui-panel">
            <view class="weui-panel__bd" wx:for="{{notice}}">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__title weui-media-box__title_in-text" wx:if="{{item.title == '系统通知'}}">系统通知：</view>
                    <view class="weui-media-box__title weui-media-box__title_in-text" wx:elif="{{item.title != '系统通知'}}">{{item.sender}}：</view>
                    <view class="weui-media-box__desc"><text style='padding-left:56rpx;font-size:32rpx'>{{item.content}}</text><i-icon type="accessory" size='20'color='#5677fc ' bindtap='goUserAffairs' data-id='{{item.senderUserId}}' data-=''/><text wx:if="{{item.hasDeal == 0}}" style='color:#c41411'>待处理</text><text wx:if="{{item.hasDeal == 1}}" style='color:#259b24'>已处理</text><view wx:for="{{item.MessageSubs}}" wx:for-item="it"><view wx:if="{{openId == it.receiverOpenId}}">{{it.id}}</view></view></view>
                    <view class="weui-media-box__info" style='color:#d99694'>
                        <!-- <view class="weui-media-box__info__meta" wx:if="{{item.title}}">{{item.title}}</view> -->
                        <view class="weui-media-box__info__meta">{{item.sendTime}}</view>
                    </view>
                </view>
            </view>
        </view>
        </view>
      </scroll-view>
    </view>
    <i-modal title="操作提示" visible="{{ visible }}" actions="{{ actions }}" bind:click="handleClick">
    <view>请选择通知处理方式</view>
</i-modal>
    <view class="{{isIphoneX ? 'feed-bottom-view feed-bottom-view-IPX' : 'feed-bottom-view'}}"></view>
  </view>
</view>
