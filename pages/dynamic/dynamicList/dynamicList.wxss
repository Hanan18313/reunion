/* pages/person/person.wxss */
@import '../../../style/weui.wxss';
page,
.page,
.page__bd{
    height: 100%;
}
.dynamic_btn{
    position: absolute;
    bottom: 30rpx;
    right: 0rpx;
    width: 100%
}
.header{
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}
.h_portrait{

}
.h_name,.h_time{
  font-size: 28rpx;
}
.card{
  height: 72%;
  margin: 20rpx 0 0 0;
  border-top: #e9eaec solid 1px;
}
.sec_content{
  height: 70%;
}
.sec_images{
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 120rpx 40rpx 120rpx;
}
.sec_images view{
  width: 33%;
  height:150rpx;
}
.sec_images view image{
  width: 100%;
  height: 100%;
}
.footer{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 100rpx;
}
.good, .pinglun{
  width: 150rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}
.good text, .pinglun text{
  font-size: 26rpx;
  text-align: center;
  padding: 0 0 0 8rpx; 
}
.good image, .pinglun image{
  height: 40rpx;
  width: 40rpx;
}