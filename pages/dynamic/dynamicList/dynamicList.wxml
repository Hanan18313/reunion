<!--pages/home/home.wxml-->
<view class='page'>
  <view class='page__bd'>
   <view class="{{isIphoneX ?'fix-iphonex-navbar-ipx':'fix-iphonex-navbar'}}"></view>
   <!-- 仿微信朋友圈 -->
    <scroll-view class='page' style='height:92vh' scroll-y='true'>
      <!-- 列表 -->
      <view class='CircleList' wx:for='{{DataSource}}'>
        <!-- 头像、昵称、内容 -->
        <view class='body-view'>
          <!-- 头像 -->
          <view class='left-view'>
            <image class='user-icon' src='{{icon}}'></image>
          </view>
          <view class='right-view'>
            <!-- 昵称 -->
            <view class='user-name-view'>
              <label class='user-name'>小韩</label>
            </view>
            <!-- 内容 -->
            <view class='user-content-view'>
              <text class='user-content'>{{content}}</text>
            </view>
            <!-- 图片 -->
            <view class='photo-view'>
              <view class='photo' wx:for='{{resource}}' style='width:{{photoWidth}}px;height:{{photoWidth}}px'>
                <image bindtap='LookPhoto' data-photUrl='{{item}}' src='{{item}}' style='width:{{photoWidth}}px;height:{{photoWidth}}px'></image>
              </view>
            </view>
            <!-- 地理位置 -->
            <view class='user-address-view'>
              <label>杭州市下城区星城发展大厦</label>
            </view>

            <!-- 时间、删除按钮、点赞评论按钮 -->
            <view class='TDD-view'>
              <label>2019-06-7 10:14:23</label>
              <button bindtap='delete' style='color:#607d8b'>删除</button>
              <!-- <view bindtap='TouchDiscuss' ><image data-isShow='{{isShow}}' src='/images/wxdiscuss.png'></image></view> -->
            </view>
            <view style='height:60rpx;display:flex;justify-content:space-between;margin:0 40rpx 0 10rpx;font-size:26rpx;align-items:center'>
              <view bindtap='TouchLike'><i-icon type="like_fill" size='20' color='{{iconColor}}'/></view>
              <view bindtap='TouchDiscuss' style='margin-top:16rpx'><image  style='width:50rpx;height:40rpx' src='/images/wxdiscuss.png'></image></view>
            </view>
            <!-- 点赞 -->
            <view class='zan-view'>
              <view class='trigon-view'>
                <image mode='aspectFill' class='trigon' src='/images/trigon.png'></image>
              </view>

              <!-- 点赞 -->
              <view class='zan-bg-view'>
                <view class='zan-user-view' wx:for='{{zanSource}}'>
                  <label bindtap='TouchZanUser' data-name='{{item}}' class='zan-user'>{{item}},</label>
                </view>
              </view>
              <view class='line'></view>
              <!-- 评论 -->
              <!-- <view class='discuss-view'>
                <view class='discuss' wx:for='{{contnet}}'>
                  <label bindtap='TouchZanUser' data-name='{{item.firstname}}' class='discuss-user'>{{item.firstname}}：</label>
                  <label class='content'>{{item.content}}</label>
                </view>
              </view> -->
            </view>
          </view>
        </view>
      </view>
    </scroll-view>

<!-- 评论按钮弹出框 -->
<!-- <view animation="{{animation}}" class='pop-up-box' style='top:{{popTop}}px;width: {{popWidth}}px;'>

</view> -->
    <view class="dynamic_btn" wx:if="{{showDiscussBtn}}" style='bottom:{{discussInputHight}}rpx;background:#f8f8f9'>
      <view style='width:75%;padding:20rpx 0 0 30rpx'><input class='dynamic_input' style='border:#dddee1 solid 1px' focus='true' bindfocus='bindFocus' bindblur='bindBlur'   ></input></view>
      <view style='padding:20rpx 0 0 0'><button class='dynamic_btn2' type='primary' size='mini' bindtap='sendDanmu'><text style='font-size:32rpx'>发送</text></button></view>
    </view>
   <view class="{{isIphoneX ? 'feed-bottom-view feed-bottom-view-IPX' : 'feed-bottom-view'}}"></view>
  </view>
</view>
